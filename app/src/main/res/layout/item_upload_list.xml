<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llParent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tvPatinID"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layout_marginLeft="24dp"
        android:text="病人ID"
        android:singleLine="true"
        android:textColor="@color/myTxtColor"
        android:textSize="@dimen/textSize_medium_small"/>

    <TextView
        android:id="@+id/tvPatinName"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layout_marginLeft="12dp"
        android:text="病人名称"
        android:singleLine="true"
        android:textColor="@color/myTxtColor"
        android:textSize="@dimen/textSize_medium_small"/>

    <TextView
        android:id="@+id/tvCacheTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_marginLeft="12dp"
        android:text="时间"
        android:textColor="@color/myTxtColor"
        android:textSize="@dimen/textSize_medium_small"/>

    <TextView
        android:id="@+id/tvDesc"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginLeft="12dp"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:text="未上传的功能描述"
        android:textColor="@color/myTxtColor"
        android:textSize="@dimen/textSize_medium_small"/>


    <TextView
        android:id="@+id/tvUpload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:layout_marginRight="12dp"
        android:text="上传"
        android:singleLine="true"
        android:textColor="@color/drug_select"
        android:textSize="@dimen/textSize_medium_small"/>
</LinearLayout>