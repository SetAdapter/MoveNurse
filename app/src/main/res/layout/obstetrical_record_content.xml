<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="1dp"
              android:layout_marginTop="1dp"
              android:background="@color/white"
              android:orientation="horizontal">

    <TextView
            android:id="@+id/tvDate"
            style="@style/recordTitle"
            android:layout_width="150dp"
            android:text="日期"
            android:textColor="@color/myTxtLight"/>

    <include layout="@layout/item_line_vertical"/>

    <TextView
            android:id="@+id/tvTime"
            style="@style/recordTitle"
            android:layout_width="62dp"
            android:text="时间"
            android:textColor="@color/myTxtLight"/>

    <include layout="@layout/item_line_vertical"/>

    <TextView
            android:id="@+id/tvTemperature"
            style="@style/recordTitle"
            android:layout_width="62dp"
            android:text="T\n(℃)"
            android:textColor="@color/myTxtLight"/>

    <include layout="@layout/item_line_vertical"/>

    <TextView
            android:id="@+id/tvHR"
            style="@style/recordTitle"
            android:layout_width="75dp"
            android:text="p/HR\n(次/分)"
            android:textColor="@color/myTxtLight"/>

    <include layout="@layout/item_line_vertical"/>

    <TextView
            android:id="@+id/tvR"
            style="@style/recordTitle"
            android:layout_width="75dp"
            android:text="R\n(次/分)"
            android:textColor="@color/myTxtLight"/>

    <include layout="@layout/item_line_vertical"/>

    <TextView
            android:id="@+id/tvBP"
            style="@style/recordTitle"
            android:layout_width="75dp"
            android:text="BP\n(mmHg)"
            android:textColor="@color/myTxtLight"/>

    <include layout="@layout/item_line_vertical"/>
    <TextView
            android:id="@+id/tvSp"
            style="@style/recordTitle"
            android:layout_width="75dp"
            android:text="SpO₂\n(%)"
            android:textColor="@color/myTxtLight"/>

    <include layout="@layout/item_line_vertical"/>
    <TextView
            android:id="@+id/tvOC_UCS"
            style="@style/recordTitle"
            android:layout_width="100dp"
            android:text="子宫收缩"
            android:textColor="@color/myTxtLight"/>

    <include layout="@layout/item_line_vertical"/>

    <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent">

        <TextView
                android:id="@+id/tvFundusHeight"
                style="@style/recordTitle"
                android:layout_width="100dp"
                android:text="宫底高度"
                android:textColor="@color/myTxtLight"/>

        <include layout="@layout/item_line_vertical"/>

        <TextView
                android:id="@+id/LochiaNature"
                style="@style/recordTitle"
                android:layout_width="100dp"
                android:text="恶露性状"
                android:textColor="@color/myTxtLight"/>
    </LinearLayout>

    <include layout="@layout/item_line_vertical"/>

    <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent">

        <TextView
                android:id="@+id/BreastCondition"
                style="@style/recordTitle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="乳房"
                android:textColor="@color/myTxtLight"/>

        <include layout="@layout/item_line_vertical"/>

        <TextView
                android:id="@+id/Lactation"
                style="@style/recordTitle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="泌乳"
                android:textColor="@color/myTxtLight"/>
    </LinearLayout>

    <include layout="@layout/item_line_vertical"/>

    <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent">

        <TextView
                android:id="@+id/In_Project"
                style="@style/recordTitle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="项目"
                android:textColor="@color/myTxtLight"/>

        <include layout="@layout/item_line_vertical"/>

        <TextView
                android:id="@+id/In_Amount"
                style="@style/recordTitle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="量"
                android:textColor="@color/myTxtLight"/>
    </LinearLayout>

    <include layout="@layout/item_line_vertical"/>

    <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent">

        <TextView
                android:id="@+id/Out_Project"
                style="@style/recordTitle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="项目"
                android:textColor="@color/myTxtLight"/>

        <include layout="@layout/item_line_vertical"/>

        <TextView
                android:id="@+id/Out_Amount"
                style="@style/recordTitle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="量"
                android:textColor="@color/myTxtLight"/>
    </LinearLayout>

    <include layout="@layout/item_line_vertical"/>

    <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent">

        <TextView
                android:id="@+id/AbdomenWound"
                style="@style/recordTitle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="腹部"
                android:textColor="@color/myTxtLight"/>

        <include layout="@layout/item_line_vertical"/>

        <TextView
                android:id="@+id/PerinealWound"
                style="@style/recordTitle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="会阴"
                android:textColor="@color/myTxtLight"/>
    </LinearLayout>

    <include layout="@layout/item_line_vertical"/>

    <TextView
            android:id="@+id/Catheters"
            style="@style/recordTitle"
            android:layout_width="100dp"
            android:text="尿管"
            android:textColor="@color/myTxtLight"/>

    <include layout="@layout/item_line_vertical"/>

    <TextView
            android:id="@+id/POGBA"
            style="@style/recordTitle"
            android:layout_width="100dp"
            android:text="肛门排气"
            android:textColor="@color/myTxtLight"/>

    <include layout="@layout/item_line_vertical"/>

    <TextView
            android:id="@+id/OtherSituation"
            style="@style/recordTitle"
            android:layout_width="300dp"
            android:text="特殊情况记录"
            android:gravity="center"
            android:maxLines="1"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/myTxtLight"/>

    <include layout="@layout/item_line_vertical"/>

    <TextView
            android:id="@+id/ExecutiveNurse"
            style="@style/recordTitle"
            android:layout_width="125dp"
            android:text="护士签名"
            android:textColor="@color/myTxtLight"/>

    <include layout="@layout/item_line_vertical"/>

</LinearLayout>
