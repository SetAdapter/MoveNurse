<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <RelativeLayout
            android:id="@+id/RL_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/common_text1"
                android:textSize="@dimen/extra_large_font_size"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>

        <ImageView
                android:id="@+id/iv_HaveOrders"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/doctorsadvice"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/iv_sex"
                android:layout_toStartOf="@+id/iv_sex"
                android:layout_marginRight="5dp"
                android:layout_marginEnd="5dp"/>

        <ImageView
                android:id="@+id/iv_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/man"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>
    </RelativeLayout>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/layer_content_bg"
            android:orientation="vertical">

        <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="姓名:路人甲"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="@dimen/large_font_size"/>

        <TextView
                android:id="@+id/tv_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="年龄:36"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="@dimen/large_font_size"/>

        <TextView
                android:id="@+id/tv_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="编号:p1234115"
                android:textSize="@dimen/large_font_size"/>

        <TextView
                android:id="@+id/tv_ICD_Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="入院诊断:"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="@dimen/large_font_size"/>

        <TextView
                android:id="@+id/tv_MedicareType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="医保:"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="@dimen/large_font_size"/>

        <TextView
                android:id="@+id/tv_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="主治"
                android:ellipsize="end"
                android:textSize="@dimen/large_font_size"/>

        <TextView
                android:id="@+id/tv_in_Date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="入院日期:"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="@dimen/large_font_size"/>

        <TextView
                android:id="@+id/tv_total_fee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="金额:"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="@dimen/large_font_size"/>

    </LinearLayout>
</LinearLayout>



