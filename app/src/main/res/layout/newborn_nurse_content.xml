<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:layout_marginBottom="1dp"
              android:layout_marginTop="1dp"
              android:orientation="horizontal">

    <TextView
            android:id="@+id/tvDate"
            style="@style/recordTitle"
            android:layout_width="150dp"
            android:textColor="@color/myTxtLight"
            android:text="日期"/>

    <include layout="@layout/item_line_vertical"/>

    <TextView
            android:id="@+id/tvTime"
            style="@style/recordTitle"
            android:layout_width="62dp"
            android:textColor="@color/myTxtLight"
            android:text="时间"/>

    <include layout="@layout/item_line_vertical"/>

    <TextView
            android:id="@+id/tvTemperature"
            style="@style/recordTitle"
            android:layout_width="62dp"
            android:textColor="@color/myTxtLight"
            android:text="T\n(°C)"/>

    <include layout="@layout/item_line_vertical"/>

    <TextView
            android:id="@+id/tv_Reaction"
            style="@style/recordTitle"
            android:textColor="@color/myTxtLight"
            android:layout_width="62dp"
            android:text="反应"/>

    <include layout="@layout/item_line_vertical"/>

    <TextView
            android:id="@+id/tv_Cry"
            style="@style/recordTitle"
            android:textColor="@color/myTxtLight"
            android:layout_width="80dp"
            android:text="哭声"/>

    <include layout="@layout/item_line_vertical"/>

    <TextView
            android:id="@+id/tv_SuckForce"
            style="@style/recordTitle"
            android:layout_width="80dp"
            android:textColor="@color/myTxtLight"
            android:text="吸吮力"/>

    <include layout="@layout/item_line_vertical"/>

    <LinearLayout
            android:layout_width="300dp"
            android:layout_height="match_parent">

        <TextView
                android:id="@+id/tv_FeedingPatterns"
                style="@style/recordTitle"
                android:textColor="@color/myTxtLight"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="方式"/>

        <include layout="@layout/item_line_vertical"/>

        <TextView
                android:id="@+id/tv_FeedType"
                style="@style/recordTitle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="@color/myTxtLight"
                android:text="种类"/>

    </LinearLayout>

    <include layout="@layout/item_line_vertical"/>

    <LinearLayout
            android:layout_width="300dp"
            android:layout_height="match_parent">

        <TextView
                android:id="@+id/tv_OxygenInhalation"
                style="@style/recordTitle"
                android:layout_width="0dp"
                android:textColor="@color/myTxtLight"
                android:layout_weight="1"
                android:text="方式"/>

        <include layout="@layout/item_line_vertical"/>

        <TextView
                android:id="@+id/tv_OxygenFlowRate"
                style="@style/recordTitle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="@color/myTxtLight"
                android:text="流量(L/min)"/>

    </LinearLayout>

    <include layout="@layout/item_line_vertical"/>

    <TextView
            android:id="@+id/tv_SkinColor"
            style="@style/recordTitle"
            android:layout_width="100dp"
            android:textColor="@color/myTxtLight"
            android:text="皮肤颜色"/>

    <include layout="@layout/item_line_vertical"/>

    <TextView
            android:id="@+id/tv_Umbilical"
            style="@style/recordTitle"
            android:layout_width="100dp"
            android:textColor="@color/myTxtLight"
            android:text="脐部情况"/>

    <include layout="@layout/item_line_vertical"/>

    <TextView
            android:id="@+id/tv_Vomit"
            style="@style/recordTitle"
            android:layout_width="100dp"
            android:textColor="@color/myTxtLight"
            android:text="呕吐"/>

    <include layout="@layout/item_line_vertical"/>

    <TextView
            android:id="@+id/tv_Stool"
            style="@style/recordTitle"
            android:layout_width="100dp"
            android:textColor="@color/myTxtLight"
            android:text="大便情况"/>

    <include layout="@layout/item_line_vertical"/>

    <TextView
            android:id="@+id/tv_Urination"
            style="@style/recordTitle"
            android:textColor="@color/myTxtLight"
            android:layout_width="100dp"
            android:text="小便情况"/>

    <include layout="@layout/item_line_vertical"/>

    <TextView
            android:id="@+id/tv_OtherSituation"
            style="@style/recordTitle"
            android:layout_width="300dp"
            android:textColor="@color/myTxtLight"
            android:gravity="center"
            android:maxLines="1"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="特殊情况记录"/>

    <include layout="@layout/item_line_vertical"/>

    <TextView
            android:id="@+id/tv_ExecutiveNurse"
            style="@style/recordTitle"
            android:layout_width="125dp"
            android:textColor="@color/myTxtLight"
            android:text="护士签名"/>

    <include layout="@layout/item_line_vertical"/>

</LinearLayout>