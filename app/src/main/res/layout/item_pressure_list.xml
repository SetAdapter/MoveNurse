<?xml version="1.0" encoding="utf-8"?>
<com.fy.widget.CheckableLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="1dp">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <CheckBox
                android:id="@+id/cb_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center|left"
                android:maxLines="2"
                android:button="@null"
                android:drawableLeft="@drawable/selector_syringe_radio"
                android:text="时间"
                android:textColor="@color/color_main_string"
                android:textSize="@dimen/textSize_medium_small"/>

        <LinearLayout
                android:id="@+id/ll_pressuer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:padding="10dp">

            <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:background="@color/lineColor"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false">

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2">

                    <TextView
                            android:id="@+id/ICD_Name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="术前诊断:"
                            android:textColor="@color/color_main_string"
                            android:textSize="@dimen/textSize_medium_small"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="8">

                    <TextView
                            android:id="@+id/tv_In_Dis"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:textColor="@color/color_main_string"
                            android:textSize="@dimen/textSize_medium_small"
                            />
                </LinearLayout>

            </LinearLayout>

            <include layout="@layout/item_line"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false">

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="手术名称:"
                            android:textColor="@color/color_main_string"
                            android:textSize="@dimen/textSize_medium_small"
                            />
                </LinearLayout>

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="8">

                    <TextView
                            android:id="@+id/OP_Name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:textColor="@color/color_main_string"
                            android:textSize="@dimen/textSize_medium_small"
                            />
                </LinearLayout>
            </LinearLayout>

            <include layout="@layout/item_line"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false">

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="使用评估表指征:"
                            android:textColor="@color/color_main_string"
                            android:textSize="@dimen/textSize_medium_small"
                            />
                </LinearLayout>

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="8">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="手术时间:>3h,瘫痪、截瘫、昏迷、极度烦躁、大小便失禁、水肿恶液质、营养不良、肥胖疼痛、发热、有支架或石膏外固定架的病人需使用以下的评估表。"
                            android:textColor="@color/color_main_string"
                            android:textSize="@dimen/textSize_medium_small"
                            />
                </LinearLayout>
            </LinearLayout>

            <include layout="@layout/item_line"/>

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <TextView
                        android:id="@+id/tv_nationality"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:background="@color/app_pink_color"
                        android:gravity="center"
                        android:text="病人基本情况"
                        android:textColor="@color/app_color_white"
                        android:textSize="@dimen/textSize_medium_small"/>


                <TextView
                        android:id="@+id/overallScore"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:background="@null"
                        android:clickable="true"
                        android:gravity="center"
                        android:text="评估:100 分"
                        android:textColor="@color/app_pink_color"
                        android:textSize="@dimen/textSize_medium_small"/>
            </RelativeLayout>

            <include layout="@layout/item_line"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="10"
                    android:baselineAligned="false">

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="体型:"
                            android:textColor="@color/color_main_string"
                            android:textSize="@dimen/textSize_medium_small"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="8">

                    <TextView
                            android:id="@+id/SomatoType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:textColor="@color/color_main_string"
                            android:textSize="@dimen/textSize_medium_small"
                            />
                </LinearLayout>
            </LinearLayout>

            <include layout="@layout/item_line"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="10"
                    android:baselineAligned="false">

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="危险部位皮肤类型:"
                            android:textColor="@color/color_main_string"
                            android:textSize="16dp"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="8">

                    <TextView
                            android:id="@+id/SkinType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:textColor="@color/color_main_string"
                            android:textSize="@dimen/textSize_medium_small"/>
                </LinearLayout>
            </LinearLayout>

            <include layout="@layout/item_line"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="10"
                    android:baselineAligned="false">

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="性别:"
                            android:textColor="@color/color_main_string"
                            android:textSize="@dimen/textSize_medium_small"
                            />
                </LinearLayout>

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4">

                    <TextView
                            android:id="@+id/Sex"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:textColor="@color/color_main_string"
                            android:textSize="@dimen/textSize_medium_small"/>
                </LinearLayout>
            </LinearLayout>

            <include layout="@layout/item_line"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="10"
                    android:baselineAligned="false">

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="年龄:"
                            android:textColor="@color/color_main_string"
                            android:textSize="@dimen/textSize_medium_small"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="8">

                    <TextView
                            android:id="@+id/Age"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:textColor="@color/color_main_string"
                            android:textSize="@dimen/textSize_medium_small"/>
                </LinearLayout>
            </LinearLayout>

            <include layout="@layout/item_line"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="10"
                    android:baselineAligned="false">

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="其他危险因素:"
                            android:textColor="@color/color_main_string"
                            android:textSize="@dimen/textSize_medium_small"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="8">

                    <TextView
                            android:id="@+id/OtherHazard"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:textColor="@color/color_main_string"
                            android:textSize="@dimen/textSize_medium_small"/>
                </LinearLayout>
            </LinearLayout>

            <include layout="@layout/item_line"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="10"
                    android:baselineAligned="false">

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="控便能力:"
                            android:textColor="@color/color_main_string"
                            android:textSize="@dimen/textSize_medium_small"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="8">

                    <TextView
                            android:id="@+id/ContinenceAbility"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:textColor="@color/color_main_string"
                            android:textSize="@dimen/textSize_medium_small"/>
                </LinearLayout>
            </LinearLayout>

            <include layout="@layout/item_line"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="10"
                    android:baselineAligned="false">

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="活动情况:"
                            android:textColor="@color/color_main_string"
                            android:textSize="@dimen/textSize_medium_small"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="8">

                    <TextView
                            android:id="@+id/Activities"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:textColor="@color/color_main_string"
                            android:textSize="@dimen/textSize_medium_small"/>

                </LinearLayout>
            </LinearLayout>

            <include layout="@layout/item_line"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="10"
                    android:baselineAligned="false">

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="饮食与食欲:"
                            android:textColor="@color/color_main_string"
                            android:textSize="@dimen/textSize_medium_small"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="8">

                    <TextView
                            android:id="@+id/Appetite"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:textColor="@color/color_main_string"
                            android:textSize="@dimen/textSize_medium_small"/>
                </LinearLayout>
            </LinearLayout>

            <include layout="@layout/item_line"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="10"
                    android:baselineAligned="false">

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="神经性障碍:"
                            android:textColor="@color/color_main_string"
                            android:textSize="@dimen/textSize_medium_small"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="8">

                    <TextView
                            android:id="@+id/NeuroticDisor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:textColor="@color/color_main_string"
                            android:textSize="@dimen/textSize_medium_small"
                            tools:ignore="TooManyViews"/>
                </LinearLayout>
            </LinearLayout>

            <include layout="@layout/item_line"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="10"
                    android:baselineAligned="false">

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="药物治疗:"
                            android:textColor="@color/color_main_string"
                            android:textSize="@dimen/textSize_medium_small"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3">

                    <TextView
                            android:id="@+id/Medication"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:textColor="@color/color_main_string"
                            android:textSize="@dimen/textSize_medium_small"/>
                </LinearLayout>
            </LinearLayout>

            <include layout="@layout/item_line"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="10"
                    android:baselineAligned="false">

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="大手术/创伤:"
                            android:textColor="@color/color_main_string"
                            android:textSize="@dimen/textSize_medium_small"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3">

                    <TextView
                            android:id="@+id/Major_OP"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:textColor="@color/color_main_string"
                            android:textSize="@dimen/textSize_medium_small"/>
                </LinearLayout>
            </LinearLayout>

            <include layout="@layout/item_line"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="12"
                    android:baselineAligned="false">


                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="8">

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="(评估值:≥ 10分危险; ≥15分高度危险; ≥20分非常危险)"
                            android:textColor="@color/color_main_string"
                            android:textSize="@dimen/textSize_medium_small"/>
                </LinearLayout>
            </LinearLayout>

            <include layout="@layout/item_line"/>

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/app_pink_color"
                        android:padding="10dp"
                        android:text="预防措施"
                        android:textColor="@color/app_color_white"
                        android:textSize="@dimen/textSize_medium_small"/>

            </LinearLayout>

            <include layout="@layout/item_line"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="10">

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp">

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="根据评估结果,在手术中有发生和加重压疮的可能,采取的预防措施:"
                            android:textColor="@color/color_main_string"
                            android:textSize="@dimen/textSize_medium"/>

                    <TextView
                            android:id="@+id/tvPrevention_PM1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="1234"
                            android:drawableLeft="@mipmap/ic_img_dot"
                            android:textColor="@color/color_main_string"
                            android:textSize="@dimen/textSize_medium_small"/>
                    <TextView
                            android:id="@+id/tvPrevention_PM2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:drawableLeft="@mipmap/ic_img_dot"
                            android:textColor="@color/color_main_string"
                            android:textSize="@dimen/textSize_medium_small"/>
                    <TextView
                            android:id="@+id/tvPrevention_PM3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:drawableLeft="@mipmap/ic_img_dot"
                            android:textColor="@color/color_main_string"
                            android:textSize="@dimen/textSize_medium_small"/>
                    <TextView
                            android:id="@+id/tvPrevention_PM4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:drawableLeft="@mipmap/ic_img_dot"
                            android:textColor="@color/color_main_string"
                            android:textSize="@dimen/textSize_medium_small"/>
                    <TextView
                            android:id="@+id/tvPrevention_PM5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:drawableLeft="@mipmap/ic_img_dot"
                            android:textColor="@color/color_main_string"
                            android:textSize="@dimen/textSize_medium_small"/>
                    <TextView
                            android:id="@+id/tvPrevention_PM6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:drawableLeft="@mipmap/ic_img_dot"
                            android:textColor="@color/color_main_string"
                            android:textSize="@dimen/textSize_medium_small"/>
                </LinearLayout>
            </LinearLayout>

            <include layout="@layout/item_line"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:weightSum="10"
                    android:baselineAligned="false">

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="10"
                        android:baselineAligned="false">

                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                        <TextView
                                android:id="@+id/AssessmentDate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="时间:"
                                android:textSize="@dimen/textSize_medium_small"/>

                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                        <TextView
                                android:id="@+id/AssessmentNurse"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="评估护士签名"
                                android:textSize="@dimen/textSize_medium_small"/>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</com.fy.widget.CheckableLayout>