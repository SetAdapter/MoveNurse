<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="1dp"
              android:layout_marginTop="1dp"
              android:background="@color/white"
              android:orientation="horizontal">

    <TextView
            android:id="@+id/tvDate"
            style="@style/recordTitle"
            android:layout_width="150dp"
            android:text="日期"
            android:textColor="@color/myTxtLight"/>

    <include layout="@layout/item_line_vertical"/>

    <TextView
            android:id="@+id/tvTime"
            style="@style/recordTitle"
            android:layout_width="62dp"
            android:text="时间"
            android:textColor="@color/myTxtLight"/>

    <include layout="@layout/item_line_vertical"/>

    <TextView
            android:id="@+id/tvTemperature"
            style="@style/recordTitle"
            android:layout_width="62dp"
            android:text="T\n(℃)"
            android:textColor="@color/myTxtLight"/>

    <include layout="@layout/item_line_vertical"/>

    <TextView
            android:id="@+id/tvHR"
            style="@style/recordTitle"
            android:layout_width="75dp"
            android:text="p/HR\n(次/分)"
            android:textColor="@color/myTxtLight"/>

    <include layout="@layout/item_line_vertical"/>

    <TextView
            android:id="@+id/tvR"
            style="@style/recordTitle"
            android:layout_width="75dp"
            android:text="R\n(次/分)"
            android:textColor="@color/myTxtLight"/>

    <include layout="@layout/item_line_vertical"/>

    <TextView
            android:id="@+id/tvBP"
            style="@style/recordTitle"
            android:layout_width="75dp"
            android:text="BP\n(mmHg)"
            android:textColor="@color/myTxtLight"/>

    <include layout="@layout/item_line_vertical"/>

    <TextView
            android:id="@+id/tvConsciousness"
            style="@style/recordTitle"
            android:layout_width="140dp"
            android:text="意识"
            android:textColor="@color/myTxtLight"/>

    <include layout="@layout/item_line_vertical"/>

    <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent">

        <TextView
                android:id="@+id/tvInContent"
                style="@style/recordTitle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="内容"
                android:textColor="@color/myTxtLight"/>

        <include layout="@layout/item_line_vertical"/>

        <TextView
                android:id="@+id/tvInNum"
                style="@style/recordTitle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="量"
                android:textColor="@color/myTxtLight"/>
    </LinearLayout>

    <include layout="@layout/item_line_vertical"/>

        <TextView
                android:id="@+id/tvOutContent"
                style="@style/recordTitle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="内容"
                android:textColor="@color/myTxtLight"/>

        <include layout="@layout/item_line_vertical"/>
        <TextView
                android:id="@+id/tvOutNum"
                style="@style/recordTitle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="量"
                android:textColor="@color/myTxtLight"/>

    <include layout="@layout/item_line_vertical"/>

        <TextView
                android:id="@+id/tvLeftDiameter"
                style="@style/recordTitle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="直径（mm）"
                android:textColor="@color/myTxtLight"/>

        <include layout="@layout/item_line_vertical"/>

        <TextView
                android:id="@+id/tvLeftReflex"
                style="@style/recordTitle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="反射"
                android:textColor="@color/myTxtLight"/>

    <include layout="@layout/item_line_vertical"/>


        <TextView
                android:id="@+id/tvRightDiameter"
                style="@style/recordTitle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="直径(mm)"
                android:textColor="@color/myTxtLight"/>

        <include layout="@layout/item_line_vertical"/>

        <TextView
                android:id="@+id/tvRightReflex"
                style="@style/recordTitle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="量"
                android:textColor="@color/myTxtLight"/>

    <include layout="@layout/item_line_vertical"/>

    <TextView
            android:id="@+id/tvMeasures"
            style="@style/recordTitle"
            android:layout_width="300dp"
            android:gravity="center"
            android:text="病情观察及措施"
            android:textColor="@color/myTxtLight"/>

    <include layout="@layout/item_line_vertical"/>

    <TextView
            android:id="@+id/tvAutograph"
            style="@style/recordTitle"
            android:layout_width="125dp"
            android:text="护士签名"
            android:textColor="@color/myTxtLight"/>

    <include layout="@layout/item_line_vertical"/>

</LinearLayout>
