<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lvMenuList"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/popup_menu_bg"
    android:divider="@drawable/divider_bg"
    android:orientation="vertical"
    android:showDividers="middle">

    <TextView
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector"
        android:drawablePadding="@dimen/spacing_medium"
        android:drawableRight="@mipmap/icon1"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/spacing_small"
        android:paddingLeft="@dimen/spacing_medium_small"
        android:paddingRight="@dimen/spacing_medium_small"
        android:paddingTop="@dimen/spacing_small"
        android:text="患者资料"
        android:textColor="@color/myTxtColor"
        android:textSize="@dimen/textSize_medium"/>

    <TextView
        android:id="@+id/tv2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector"
        android:drawablePadding="@dimen/spacing_medium"
        android:drawableRight="@mipmap/icon2"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/spacing_small"
        android:paddingLeft="@dimen/spacing_medium_small"
        android:paddingRight="@dimen/spacing_medium_small"
        android:paddingTop="@dimen/spacing_small"
        android:text="医嘱管理"
        android:textColor="@color/myTxtColor"
        android:textSize="@dimen/textSize_medium"/>

    <TextView
        android:id="@+id/tv3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector"
        android:drawablePadding="@dimen/spacing_medium"
        android:drawableRight="@mipmap/icon3"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/spacing_small"
        android:paddingLeft="@dimen/spacing_medium_small"
        android:paddingRight="@dimen/spacing_medium_small"
        android:paddingTop="@dimen/spacing_small"
        android:text="护理评估"
        android:textColor="@color/myTxtColor"
        android:textSize="@dimen/textSize_medium"/>

    <TextView
        android:id="@+id/tv5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector"
        android:drawablePadding="@dimen/spacing_medium"
        android:drawableRight="@mipmap/icon5"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/spacing_small"
        android:paddingLeft="@dimen/spacing_medium_small"
        android:paddingRight="@dimen/spacing_medium_small"
        android:paddingTop="@dimen/spacing_small"
        android:text="退费退药"
        android:textColor="@color/myTxtColor"
        android:textSize="@dimen/textSize_medium"/>

</LinearLayout>